<Window x:Class="ControledeEstoqueWPF.Views.frmCadastrarSolicitacao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControledeEstoqueWPF.Views"
        mc:Ignorable="d"
        Title="frmCadastrarSolicitacao" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ComboBox x:Name="cboClientes" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdicionar" Content="Adicionar" HorizontalAlignment="Left" Margin="269,153,0,0" VerticalAlignment="Top" Height="22" Width="70" FontWeight="Medium" FontSize="14" Click="btnAdicionar_Click"/>
        <ComboBox x:Name="cboProdutos" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cboFornecedores" HorizontalAlignment="Left" Margin="144,88,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtQuantidade" HorizontalAlignment="Left" Margin="144,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <Label Content="Cadastrar Solicitação" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Medium"/>
        <Label Content="Clientes" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
        <Label Content="Fornecedores" HorizontalAlignment="Left" Margin="144,54,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
        <Label Content="Produtos" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
        <Label Content="Quantidade" HorizontalAlignment="Left" Margin="144,125,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
        <DataGrid x:Name="dtaProdutos" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="329" Height="200" Margin="10,181,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Width="1*" Binding="{Binding Nome}"/>
                <DataGridTextColumn Header="Quantidade" Width="1*" Binding="{Binding Quantidade}"/>
                <DataGridTextColumn Header="SubtotalQtdeProduto" Width="2*" Binding="{Binding SubtotalQtdeProduto}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
